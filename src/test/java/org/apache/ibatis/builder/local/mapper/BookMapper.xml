<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apache.ibatis.local.test.dao.BookMapper">

  <!-- 开启二级缓存 -->
  <cache />

  <select id="getById" resultType="BookInfo">
    SELECT * FROM t_book WHERE id=#{id}
  </select>

  <insert id="insert">
    INSERT INTO t_book
    (
      book_name,
      book_price
    )
    VALUES
      (
        #{bookName},
        #{bookPrice}
      )
  </insert>

  <update id="update">
    UPDATE t_book
    <trim prefix="SET" suffixOverrides=",">
      <if test="bookName!=null and bookName!=''">
        book_name=#{bookName},
      </if>
      <if test="bookPrice > 0">
        book_price=#{bookPrice}
      </if>
    </trim>
  </update>

  <delete id="delete">
    DELETE FROM t_book WHERE id=#{id}
  </delete>

</mapper>
