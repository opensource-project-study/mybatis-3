<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apache.ibatis.local.test.dao.PersonMapper">

  <select id="getById" resultType="personInfo">
    SELECT * FROM t_person WHERE id = #{id}
  </select>

  <select id="getNameById" resultType="java.lang.String">
    SELECT name from t_person WHERE id=#{id}
  </select>

  <select id="getAgeById" resultType="java.lang.Integer">
    SELECT age from t_person WHERE id=#{id}
  </select>

  <insert id="insert">
    INSERT INTO t_person
    (
     name,
     age
    )
    VALUES
    (
     #{name},
     #{age}
    )
  </insert>

  <update id="update">
    UPDATE t_person
    <trim prefix="SET" suffixOverrides=",">
      <if test="name != null and name != ''">
        name=#{name},
      </if>
      <if test="age > 0">
        age=#{age},
      </if>
    </trim>
    WHERE id=#{id}
  </update>

  <delete id="delete">
    DELETE FROM t_person WHERE id=#{id}
  </delete>

</mapper>
